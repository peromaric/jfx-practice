<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.tvz.dev.controllers.MenuController">
    <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Menu mnemonicParsing="false" text="Items">
            <MenuItem mnemonicParsing="false" onAction="#showItemSearchScreen" text="Search" />
        </Menu>
        <Menu mnemonicParsing="false" text="Factories">
            <MenuItem mnemonicParsing="false" onAction="#showFactorySearchScreen" text="Search" />
        </Menu>
        <Menu mnemonicParsing="false" text="Stores">
            <MenuItem mnemonicParsing="false" onAction="#showStoreSearchScreen" text="Search" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
</AnchorPane>
